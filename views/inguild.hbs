<div class = "container">
  {{#if user}}
    <h2>{{guild.name}}</h2>
    <div class = "hidden" id = "guildName">{{guild._id}}</div>
    <h3>{{guild.description}}</h3>
    <div id = "memberContainer">
      <div id = "guildMembers">
        <h4>Admins</h4>
        {{#each guild.admins}}
          <p>{{this}}</p>
        {{/each}}
        <h4> Members </h4>
        {{#each guild.members}}
          <p>{{this}}</p>
        {{/each}}
      </div>
    </div>
    <h3>Rooms</h3>
    <ul id = "chatRoomList">
      {{#each guild.chatRooms}}
        <li>
          <form method="GET" class = "chatRoom">
            <input type="hidden" name="chatRoom" value = {{this._id}}>
            <button type="submit" class = "showChat">
                {{this.name}}
            </button>
          </form>
        </li>
      {{/each}}
    </ul>
    <form method = "POST" action="createRoom" id = "createRoom">
      <input type = "text" name="rName" id = "roomName">
      <input type = "submit" value = "Create Room">
    </form>

    <div id = "chat" class = "hidden">
      <table id = "messages">

      </table>
      <form method = "POST" id = "sendMessage">
        <input type = "text" id = "message">
        <input type = "submit" value = "Send">
      </form>
    </div>
    {{else}}
    <p>You need to be logged in to access this page.</p>
  {{/if}}
</div>

<script src="/javascript/chatroom.js"></script>
